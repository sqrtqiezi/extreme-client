@import "../common/lib/weui.wxss";
@import "../common/lib/app.wxss";

.container {
  height: 2000rpx;
}

textarea {
  width: 700rpx;
  padding: 25rpx 0;
}
.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.photos-wrp {
  padding: 0 25rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.photo, .photo-input {
  width: 200rpx;
  height: 200rpx;
  border: solid #efefef 1px;
  color: #efefef;
  background-color: #fff;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.photos-wrp > image {
  position: relative;
}

.photos-wrp .photo-remove {
  font-size: 1.5em;
  color: #fff;
  position: absolute;
  top: 0;
  right: 20rpx;
}

.photos-wrp .photo-remove:hover {
  color: #6f1a60;
}

.actions {
  margin: 0 auto;
  width: 40%;
}

.actions button {
  margin-right: 10rpx;
}